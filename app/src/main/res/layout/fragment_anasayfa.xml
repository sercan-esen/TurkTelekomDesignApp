<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AnasayfaFragment">

    <LinearLayout
        android:id="@+id/toolbarContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/topbarLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_turk_telekom" />

        <View
            android:id="@+id/topbarView"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="4dp"
            android:background="@color/custom_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTopbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/sanspro_semibold"
                android:text="Online İşlemler"
                android:textColor="#3647B6"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:alpha="0.3"
                android:fontFamily="@font/sanspro_semibold"
                android:text="Mobil"
                android:textColor="@color/black" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"

            android:src="@drawable/topbar_gift_icon" />

    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/custom_gray"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/sanspro_semibold"
                android:text="Hikayeler"
                android:textColor="@color/kalan_kullanim_title_text_color"
                android:textSize="16sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="4dp"
                        android:src="@drawable/ic_play_arrow_yellow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sanspro_semibold"
                        android:text="MEB Online Eğitim\nPaketi (EBA)"
                        android:textColor="@color/kalan_kullanim_title_text_color" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.8"
                        android:fontFamily="@font/sanspro_semibold"
                        android:paddingEnd="8dp"
                        android:text="Yenilenme:12.01.2022\n9 Gün Kaldı"
                        android:textAlignment="textEnd"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/kalan_kullanim_color_background"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progress_bar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="20dp"
                            android:layout_marginStart="32dp"
                            android:progress="50"
                            app:indicatorColor="@color/arrow_color_yellow"
                            app:indicatorDirectionCircular="counterclockwise"
                            app:indicatorInset="5dp"
                            app:indicatorSize="80dp"
                            app:trackColor="@color/progresbar_trackcolor"
                            app:trackCornerRadius="50dp"
                            app:trackThickness="6dp"
                            tools:progress="50" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanspro_regular"
                                android:text="KALAN GB" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_medium"
                                android:text="4GB"
                                android:textColor="@color/arrow_color_yellow"
                                android:textSize="30sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="32dp"
                            android:background="@color/custom_gray" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanspro_semibold"
                                android:paddingStart="16dp"
                                android:text="KULLANILAN GB"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanspro_semibold"
                                android:paddingStart="16dp"
                                android:text="4GB"
                                android:textColor="@color/black"
                                android:textSize="24sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginVertical="4dp"
                                android:background="@color/custom_gray" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanspro_semibold"
                                android:paddingStart="16dp"
                                android:text="TOPLAM GB"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanspro_semibold"
                                android:paddingStart="16dp"
                                android:text="8GB"
                                android:textColor="@color/black"
                                android:textSize="24sp" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="4dp"
                        android:src="@drawable/ic_play_arrow_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sanspro_semibold"
                        android:text="Hoş Geldin 750DK"

                        android:textColor="@color/kalan_kullanim_title_text_color" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.8"
                        android:fontFamily="@font/sanspro_semibold"
                        android:paddingEnd="8dp"
                        android:text="Yenilenme:12.01.2022\n9 Gün Kaldı"
                        android:textAlignment="textEnd"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/kalan_kullanim_color_background"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progress_bar2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="20dp"
                            android:layout_marginStart="32dp"
                            android:progress="50"
                            app:indicatorColor="@color/arrow_color_blue"
                            app:indicatorDirectionCircular="counterclockwise"
                            app:indicatorInset="5dp"
                            app:indicatorSize="80dp"
                            app:trackColor="@color/progresbar_trackcolor"
                            app:trackCornerRadius="50dp"
                            app:trackThickness="6dp"
                            tools:progress="50" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanspro_regular"
                                android:text="KALAN DK" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_medium"
                                android:text="375"
                                android:textColor="@color/arrow_color_blue"
                                android:textSize="30sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="32dp"
                            android:background="@color/custom_gray" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanspro_semibold"
                                android:paddingStart="16dp"
                                android:text="KULLANILAN DK"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanspro_semibold"
                                android:paddingStart="16dp"
                                android:text="375DK"
                                android:textColor="@color/black"
                                android:textSize="24sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginVertical="4dp"
                                android:background="@color/custom_gray" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanspro_semibold"
                                android:paddingStart="16dp"
                                android:text="TOPLAM DK"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanspro_semibold"
                                android:paddingStart="16dp"
                                android:text="750DK"
                                android:textColor="@color/black"
                                android:textSize="24sp" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="4dp"
                        android:src="@drawable/ic_play_arrow_red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sanspro_semibold"
                        android:text="Hoş Geldin 250SMS"

                        android:textColor="@color/kalan_kullanim_title_text_color" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.8"
                        android:fontFamily="@font/sanspro_semibold"
                        android:paddingEnd="8dp"
                        android:text="Yenilenme:12.01.2022\n9 Gün Kaldı"
                        android:textAlignment="textEnd"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/kalan_kullanim_color_background"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progress_bar3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="20dp"
                            android:layout_marginStart="32dp"
                            android:progress="50"
                            app:indicatorColor="@color/arrow_color_red"
                            app:indicatorDirectionCircular="counterclockwise"
                            app:indicatorInset="5dp"
                            app:indicatorSize="80dp"
                            app:trackColor="@color/progresbar_trackcolor"
                            app:trackCornerRadius="50dp"
                            app:trackThickness="6dp"
                            tools:progress="50" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanspro_regular"
                                android:text="KALAN SMS" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_medium"
                                android:text="250"
                                android:textColor="@color/arrow_color_red"
                                android:textSize="30sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="32dp"
                            android:background="@color/custom_gray" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanspro_semibold"
                                android:paddingStart="16dp"
                                android:text="KULLANILAN SMS"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanspro_semibold"
                                android:paddingStart="16dp"
                                android:text="250SMS"
                                android:textColor="@color/black"
                                android:textSize="24sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginVertical="4dp"
                                android:background="@color/custom_gray" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanspro_semibold"
                                android:paddingStart="16dp"
                                android:text="TOPLAM SMS"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanspro_semibold"
                                android:paddingStart="16dp"
                                android:text="500SMS"
                                android:textColor="@color/black"
                                android:textSize="24sp" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>



